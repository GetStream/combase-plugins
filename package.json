{
    "name": "combase-plugins-monorepo",
    "workspaces": [
        "packages/*"
    ],
    "private": true,
    "scripts": {
        "prettier": "prettier \"**/*.{md,css,scss,yaml,yml}\"",
        "build": "lerna exec --parallel --scope '@combase/*' -- yarn build:run",
        "clean": "lerna exec --parallel --scope '@combase/*' -- yarn build:clean",
        "watch": "lerna exec --parallel --scope '@combase/*' -- yarn build:watch"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --cache --ext .js,.jsx,.ts,.tsx --fix",
        "*.{md,css,scss,yaml,yml}": "prettier --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/node": "^7.12.10",
        "@babel/runtime": "^7.12.5",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.6.3",
        "eslint": "^7.17.0",
        "eslint-config-get-off-my-lawn": "^5.0.1",
        "jest": "^26.6.3",
        "jest-cli": "^26.6.3",
        "lerna": "^3.22.1",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1"
    }
}

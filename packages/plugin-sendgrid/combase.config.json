{
	"name": "Sendgrid",
	"configuration": {
		"key": {
			"type": "String",
			"inputType": "password",
			"required": true
		},
		"secret": {
			"type": "String",
			"inputType": "password",
			"required": true
		}
	},
	"triggers": {
		"email:send": "sendEmail",
		"email:receive": "receiveEmail",
		"combase:chat.archive": "alertUser"
	},
	"fields": {
		"Organization": [
			"stream.key",
			"stream.secret",
			"name",
			"contact.name",
			"contact.email"
		]
	}
}